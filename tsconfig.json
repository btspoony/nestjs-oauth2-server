{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ES2015",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "skipLibCheck": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["tests"]
}
